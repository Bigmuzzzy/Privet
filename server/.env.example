# Server Configuration
PORT=3000
HOST=0.0.0.0

# Base URL for media files (change to your server domain)
BASE_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=privet
DB_USER=postgres
DB_PASSWORD=

# JWT Secret (change to random string in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=30d

# APNs Configuration (Apple Push Notifications)
# Get these from Apple Developer Portal
APNS_KEY_ID=YOUR_KEY_ID
APNS_TEAM_ID=YOUR_TEAM_ID
APNS_BUNDLE_ID=com.yourcompany.Privet

# Path to APNs auth key (.p8 file)
APNS_KEY_PATH=./certs/AuthKey.p8

# APNs Environment: 'development' or 'production'
APNS_ENVIRONMENT=development

# Upload limits
MAX_FILE_SIZE_MB=10
